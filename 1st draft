#define F_CPU 8000000UL
#include <avr/io.h>
#include <LabBoard.h>
#include <stdio.h>
#include <util/delay.h>
#include <avr/interrupt.h>

#define UP		!(PINA & (1<<3))
#define DOWN	!(PINA & (1<<5))

void setup(void);
void menu (position);
char line0[20];
char position= 0;

int main(void)
{
    setup();
	
	
	SLCDClearScreen();
	sprintf(line0,"Time: ");
	SLCDSetCursorPosition(0,0);
	SLCDWriteString(line0);
	
	while (1)
	{	
	
		if(UP)
		{
			position--;
			_delay_ms(150);
			
			if (position < 0)
			{
				position = 5;
			}
			menu();
		}
		else if(DOWN)
		{
			position++;
			_delay_ms(150);
			
			if (position > 5)
			{
				position = 0;
			}
			menu();
		}
		
	}
	
}

void menu (position)
{
	if (position == 1)
	 {
		 SLCDClearScreen();
		 sprintf(line0,"Speed: ");
		 SLCDSetCursorPosition(0,0);
		 SLCDWriteString(line0);
	 }
	 
	 else if (position == 2)
	 {
		 SLCDClearScreen();
		 
		 sprintf(line0,"Heading: ");
		 SLCDSetCursorPosition(0,0);
		 SLCDWriteString(line0);
	 }
	 
	 else if (position == 3)
	 {
		 SLCDClearScreen();
		 
		 sprintf(line0,"Altitude: ");
		 SLCDSetCursorPosition(0,0);
		 SLCDWriteString(line0);
	 }
	 
	 else if (position == 4)
	 {
		 SLCDClearScreen();
		 
		 sprintf(line0,"Distance Driven: ");
		 SLCDSetCursorPosition(0,0);
		 SLCDWriteString(line0);
	 }
	 
	 else
	 {
		 SLCDClearScreen();
		 
		 char line0[20];
		 sprintf(line0,"Elapsed Time: ");
		 SLCDSetCursorPosition(0,0);
		 SLCDWriteString(line0);
	 }
	 
}
void setup (void)
{
	SLCDInit();         				// Initialize the LCD.
	SLCDDisplayOn();    				// Switched On the LCD.
	SLCDClearScreen();				// clear the LCD
	DDRA = 0x00;					// setting PORTA as input
	DDRC = 0xFF;					// setting PORTC as output
	DDRE= 0x03;					// setting the buttons
	PORTE = 0x01;
}
